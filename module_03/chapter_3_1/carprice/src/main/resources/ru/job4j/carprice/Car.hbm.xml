<hibernate-mapping>
    <class name="ru.job4j.carprice.items.Car" table="car">
        <id name="id" column="id">
            <generator class="identity"/>
        </id>
        <property name="model" column="model"/>
        <many-to-one name="body"
                     column="body_id"
                     class="ru.job4j.carprice.items.Body"/>
        <many-to-one name="engine"
                     column="engine_id"
                     class="ru.job4j.carprice.items.Engine"/>
        <many-to-one name="transmission"
                     column="transmission_id"
                     class="ru.job4j.carprice.items.Transmission"/>
    </class>
</hibernate-mapping>